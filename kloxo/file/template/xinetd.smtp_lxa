
service %servicename% 
{
	socket_type     = stream
		protocol        = tcp
		wait            = no
		disable         = no
		user            = root
		env             = SENDER_NOCHECK=1 %domainkey% %virusscan%
		instances       = %instance%
		server          = /usr/bin/lxredirecter.sh
		server_args     = /var/qmail/bin/tcp-env -Rt0 %spamdyke% /var/qmail/bin/qmail-smtpd /home/vpopmail/bin/vchkpw    true
}


